{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>


    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
           
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_back_user_index') }}" class="btn btn-primary">Revenir à la liste</a>

    
    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}"class="btn btn-warning">Modifier</a>
    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
