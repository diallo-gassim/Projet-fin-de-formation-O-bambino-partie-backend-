{% block title %}Events{% endblock %}

{% block body %}
    <h1>Détail de l'info flash</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
